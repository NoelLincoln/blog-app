<% @users.each do |user| %>
  <%= link_to user_path(user) do %>
    <div class="row gap-3 justify-content-center post-row-mt">
    <div class="card w-25">
      <%= image_tag(user.photo, alt: 'User Photo') if user.photo.present? %>
    </div>

    <div class="card flex-row w-50 align-items-baseline gap-2" >
      <h2><%= user.name %></h2>
      <p>Number of posts <%= user.posts_counter %></p>
    </div>
  </div>
    <%end %>
<% end %>
